<Window x:Class="Ocena_Pracownicza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ocena_Pracownicza"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="MenuPanel" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button x:Name="Form" Content="Formularz" Width="150" Click="FormButton_Click" Margin="10" />
            <Button x:Name="Login" Content="Zaloguj" Width="150" Click="LoginButton_Click" Margin="10" />
        </StackPanel>

        <Button Content="Back" Click="Back_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125" Height="25" Margin="25,10,0,0" Visibility="Collapsed" x:Name="BackButton"/>

        <Grid x:Name="FormPanel" Visibility="Collapsed">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="Gray"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </Grid.Resources>
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <StackPanel>
                    <!-- Imię i nazwisko -->
                    <Button Content="Back" Click="Back_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125" Height="25" Margin="25,10,0,0"/>
                    <Grid Margin="20,20,0,0" Width="300">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Imię i nazwisko:" Grid.Row="0" HorizontalAlignment="Center"/>
                        <TextBox x:Name="NameTextBox" Width="300" Grid.Row="1"/>
                    </Grid>

                    <!-- Lista rozwijana z kontami -->
                    <Grid Margin="20,20,0,0" Width="300">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Wybierz konto:" Grid.Row="0" HorizontalAlignment="Center"/>
                        <ComboBox x:Name="AccountsComboBox" Width="300" Grid.Row="1"/>
                    </Grid>
            

                    <!-- Pytania -->
                    <StackPanel Margin="20,20,0,0" Width="300">
                        <Grid>
                            <TextBlock Text="Odpowiedź na pytanie 1:" Grid.Row="0" HorizontalAlignment="Center"/>
                            <TextBox x:Name="Question1TextBox" Width="300" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0"/>
                        </Grid>

                        <Grid Margin="0,20,0,0" Width="300">
                            <TextBlock Text="Odpowiedź na pytanie 2:" Grid.Row="0" HorizontalAlignment="Center"/>
                            <TextBox x:Name="Question2TextBox" Width="300" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="300">
                            <TextBlock Text="Odpowiedź na pytanie 3:" Grid.Row="0" HorizontalAlignment="Center"/>
                            <TextBox x:Name="Question3TextBox" Width="300" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="300">
                            <TextBlock Text="Odpowiedź na pytanie 4:" Grid.Row="0" HorizontalAlignment="Center"/>
                            <TextBox x:Name="Question4TextBox" Width="300" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="300">
                            <TextBlock Text="Odpowiedź na pytanie 5:" Grid.Row="0" HorizontalAlignment="Center"/>
                            <TextBox x:Name="Question5TextBox" Width="300" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="300">
                            <TextBlock Text="Odpowiedź na pytanie 6:" Grid.Row="0" HorizontalAlignment="Center"/>
                            <TextBox x:Name="Question6TextBox" Width="300" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0"/>
                        </Grid>
                        <Button Content="Zapisz" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,20" Click="SaveFormButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
    </Grid>

        <Grid x:Name="LoginPanel" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox x:Name="UsernameBox" Width="200" Margin="10"/>
                <PasswordBox x:Name="PasswordBox" Width="200" Margin="10"/>
                <Button Content="Zaloguj" Width="100" Click="OnLoginAttempt"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="UserPanel" Visibility="Visible">
            <Button Content="Wyloguj" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125" Height="25" Margin="25,10,0,0" Click="LogoutButton_Click" />
            <ListView x:Name="UserEvaluationsListView" VerticalAlignment="Top" Margin="10,40,10,0">
                <!-- Możesz dostosować wygląd itemów tutaj, np. używając DataTemplate -->
            </ListView>
            <!-- Inne elementy interfejsu dla zalogowanego użytkownika tutaj -->
        </Grid>
    </Grid>
</Window>