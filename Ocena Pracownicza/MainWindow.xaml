<Window x:Name="FormButton" x:Class="Ocena_Pracownicza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ocena_Pracownicza"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="MenuPanel" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button x:Name="Form" Content="Formularz" Width="150" Click="FormButton_Click" />
            <Button x:Name="Login" Content="Zaloguj" Width="150" Click="LoginButton_Click" Margin="10,0" />
        </StackPanel>
        <Grid x:Name="FormPanel" Visibility="Collapsed">
            <!-- Elementy Twojego formularza tutaj -->
        </Grid>

        <Grid x:Name="LoginPanel" Visibility="Collapsed">
            <!-- Elementy Twojego panelu logowania tutaj -->
        </Grid>
    </Grid>
</Window>
