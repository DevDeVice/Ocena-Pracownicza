<Window x:Class="Ocena_Pracownicza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ocena_Pracownicza"
        mc:Ignorable="d"
        WindowStyle="None" WindowState="Maximized"
        Title="MainWindow" Height="1080" Width="1920">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFFCCE17"/>
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#000"/>
                    <Setter Property="Foreground" Value="#FFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#000"/>
        </Style>
        <Style x:Key="QuestionStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10,20,20"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="AnswerStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,-10,0,10"/>
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="Background" Value="#fff"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="img/ocenaPracowniczav2.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel x:Name="MenuPanel" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,0,0,200">
            <Button x:Name="FormBiuro" Content="Administracja/Biuro" Width="300" Height="40" Click="FormBiuroButton_Click" Margin="10" />
            <Button x:Name="FormProdukcja" Content="Produkcja/Magazyn" Width="300" Height="40" Margin="10" Click="FormProdukcjaButton_Click" />
        </StackPanel>
        <Button x:Name="Login" Content="Zaloguj" Width="300" Height="40" Click="LoginButton_Click" Margin="10,100,10,10" Visibility="Collapsed"/>
        <Button Content="X" Click="CloseButton_Click" Width="30" Height="30" VerticalAlignment="Top" Margin="0,0,2,0" HorizontalAlignment="Right" Panel.ZIndex="1"/>
        <Button Content="Wróć" Click="Back_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Height="40" Margin="50,50,0,0" Visibility="Collapsed" x:Name="BackButton" Panel.ZIndex="2"/>
        <Button Content="Wróć" Click="Back2_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Height="40" Margin="50,50,0,0" Visibility="Collapsed" x:Name="BackButton2" Panel.ZIndex="2"/>
        <Button Content="Wróć" Click="Back3_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Height="40" Margin="50,50,0,0" Visibility="Collapsed" x:Name="BackButton3" Panel.ZIndex="2"/>

        <Grid x:Name="FormPanelBiuro" Visibility="Collapsed">
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <StackPanel Margin="0,50,0,0">
                    <!-- Imię i nazwisko -->
                    <Grid x:Name="ToHideB1" Margin="0,20,0,0" Width="500" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Imię i nazwisko:" Grid.Row="0" HorizontalAlignment="Left"/>
                        <TextBox x:Name="NameTextBoxB" Width="500" Grid.Row="1"/>
                    </Grid>

                    <!-- Lista rozwijana z kontami -->
                    <Grid x:Name="ToHideB2" Margin="0,20,0,0" Width="500">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Wybierz bezpośredniego przełożonego:" Grid.Row="0" HorizontalAlignment="Left"/>
                        <ComboBox x:Name="AccountsComboBoxB1" Width="500" Grid.Row="1" SelectionChanged="AccountsComboBoxB1_SelectionChanged"/>
                        <TextBlock Text="Wybierz dział:" HorizontalAlignment="Left" Grid.Row="2" Margin="0,10,0,0"/>
                        <ComboBox x:Name="AccountsComboBoxB2" Width="500" Grid.Row="3"/>
                    </Grid>


                    <!-- Pytania -->
                    <StackPanel Margin="0,20,0,0" Width="500">
                        <Grid>
                            <TextBlock Text="Jakie są rezultaty Twojej pracy (konkretne wyniki)?" Grid.Row="0" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Question1TextBoxB" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0" TabIndex="0"/>
                        </Grid>

                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Jakie Twoje działania określił(a)byś jako pozytywne?" Grid.Row="0" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Question2TextBoxB" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0" TabIndex="1"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Jak oceniasz swoje działania i zachowania w kontekście wartości firmy?" Grid.Row="0" HorizontalAlignment="Left"/>
                            <TextBlock Text="Uczciwość:" Grid.Row="1" HorizontalAlignment="Left" Margin="0,20,0,0"/>
                            <TextBox x:Name="Question3TextBoxB" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,40,0,0" TabIndex="2"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Odpowiedzialność:" Grid.Row="0" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Question4TextBoxB" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0" TabIndex="3"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Zaangażowanie:" Grid.Row="0" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Question5TextBoxB" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0" TabIndex="4"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Bliskie relacje:" Grid.Row="0" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Question6TextBoxB" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0" TabIndex="5"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Innowacyjność:" Grid.Row="0" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Question7TextBoxB" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0" TabIndex="6"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Jakie Twoje działania określił(a)byś jako utrudniające uzyskanie dobrych rezultatów?" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                            <TextBox x:Name="Question8TextBoxB" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,40,0,0" TabIndex="7"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Nad czym chcesz pracować (jakie elementy zachowania/umiejetności chcesz rozwijać/jakie sobie stawiasz cele)?" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                            <TextBox x:Name="Question9TextBoxB" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,40,0,0" TabIndex="8"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Określ sposób i czas monitorowania dążenia do tych celów (kiedy i po czym poznasz, że zostały one zrealizowane):" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                            <TextBox x:Name="Question10TextBoxB" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,40,0,0" TabIndex="9"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Uwagi:" Grid.Row="0" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Question11TextBoxB" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0" TabIndex="10"/>
                        </Grid>
                        <Button x:Name="FormBiuroZapisz" Content="Zapisz" Width="300" Height="40" HorizontalAlignment="Center" Margin="0,20,0,20" Click="SaveFormButtonB_Click" Panel.ZIndex="2" VerticalAlignment="Center" IsDefault="True"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid x:Name="FormPanelProdukcja" Visibility="Collapsed">
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <StackPanel Margin="0,50,0,0">
                    <!-- Imię i nazwisko -->
                    <Grid x:Name="ToHideP1" Margin="0,20,0,0" Width="500">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Imię i nazwisko:" Grid.Row="0" HorizontalAlignment="Left"/>
                        <TextBox x:Name="NameTextBoxP" Width="500" Grid.Row="1"/>
                    </Grid>

                    <!-- Lista rozwijana z kontami -->
                    <Grid x:Name="ToHideP2" Margin="0,20,0,0" Width="500" Visibility="visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Wybierz bezpośredniego przełożonego:" Grid.Row="0" HorizontalAlignment="Left"/>
                        <ComboBox x:Name="AccountsComboBoxP1" Width="500" Grid.Row="1" SelectionChanged="AccountsComboBoxP1_SelectionChanged"/>
                        <TextBlock Text="Wybierz kierownika:" Grid.Row="2" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                        <ComboBox x:Name="AccountsComboBoxP2" Width="500" Grid.Row="3"/>
                    </Grid>


                    <!-- Pytania -->
                    <StackPanel Margin="0,20,0,0" Width="500">
                        <Grid>
                            <TextBlock Text="Jakie twoje działania określił(a)byś jako pozytywne (przynoszące rezultaty w twojej pracy)?" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                            <TextBox x:Name="Question1TextBoxP" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,40,0,0" TabIndex="0"/>
                        </Grid>

                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Jakie twoje działania określił(a)byś jako utrudniające uzyskanie dobrych rezultatów?" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                            <TextBox x:Name="Question2TextBoxP" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,40,0,0" TabIndex="1"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Nad czym chcesz pracować (jakie elementy zachowania/umiejętności chcesz rozwijać/jakie sobie stawiasz cele)?" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                            <TextBox x:Name="Question3TextBoxP" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,40,0,0" TabIndex="2"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Określ sposób i czas monitorowania dążenia do tych celów (kiedy i po czym poznasz, że zostały one zrealizowane)" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                            <TextBox x:Name="Question4TextBoxP" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,40,0,0" TabIndex="3"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="500">
                            <TextBlock Text="Uwagi:" Grid.Row="0" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Question5TextBoxP" Width="500" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0" TabIndex="3"/>
                        </Grid>
                        <Button x:Name="FormProdukcjaZapisz" Content="Zapisz" Width="300" HorizontalAlignment="Center" Margin="-1,20,0,20" Click="SaveFormButtonP_Click" Panel.ZIndex="2" VerticalAlignment="Center" IsDefault="True"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>


        <Grid x:Name="LoginPanel" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Login:" Margin="10,0,0,0"/>
                <TextBox x:Name="UsernameBox" Width="300" Margin="10"/>
                <TextBlock Text="Hasło" Margin="10,0,0,0"/>
                <PasswordBox x:Name="PasswordBox" Width="300" Margin="10"/>
                <Button Content="Zaloguj" Width="300" Height="40" Click="OnLoginAttempt" Margin="10" IsDefault="True"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="UserPanel" Visibility="Collapsed">
            <Button Content="Wyloguj" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Height="40" Margin="50,50,0,0" Click="LogoutButton_Click" />
            <TextBlock x:Name="Powitanie" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" Width="300" TextAlignment="Center"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,115,350,0" Width="150" Height="20" Text="Wyszukaj:"/>
            <TextBox x:Name="Search" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,110,160,0" TextChanged="Search_TextChanged"></TextBox>
            <ComboBox x:Name="EvaluationNameComboBox" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="300,110,0,0" SelectionChanged="EvaluationNameComboBox_SelectionChanged"/>
            <StackPanel HorizontalAlignment="Center" Margin="0,150,0,0">
                <TextBlock Text="Pracownicy Administracyjni/Biurowi" HorizontalAlignment="Center"></TextBlock>
                <ListView x:Name="UserEvaluationsBListView" VerticalAlignment="Top" Width="500" MouseDoubleClick="UserEvaluationsBListView_MouseDoubleClick">
                    <!-- Możesz dostosować wygląd itemów tutaj, np. używając DataTemplate -->
                </ListView>
                <TextBlock Text="Pracownicy Produkcyjni/Magazynowi" HorizontalAlignment="Center" Margin="0,50,0,0"></TextBlock>
                <ListView x:Name="UserEvaluationsPListView" VerticalAlignment="Top" Width="500" MouseDoubleClick="UserEvaluationsPListView_MouseDoubleClick">
                    <!-- Możesz dostosować wygląd itemów tutaj, np. używając DataTemplate -->
                </ListView>
                <TextBlock Text="Administracja/Biuro" HorizontalAlignment="Center" Margin="0,50,0,0"></TextBlock>
                <ListView x:Name="UserEvaluationsBListViewAll" VerticalAlignment="Top" Width="500" MouseDoubleClick="UserEvaluationsBListViewAll_MouseDoubleClick">
                    <!-- Możesz dostosować wygląd itemów tutaj, np. używając DataTemplate -->
                </ListView>
                <TextBlock Text="Produkcja/Magazyn" HorizontalAlignment="Center" Margin="0,50,0,0"></TextBlock>
                <ListView x:Name="UserEvaluationsPListViewAll" VerticalAlignment="Top" Width="500" MouseDoubleClick="UserEvaluationsPListViewAll_MouseDoubleClick">
                    <!-- Możesz dostosować wygląd itemów tutaj, np. używając DataTemplate -->
                </ListView>
            </StackPanel>
            <!-- Inne elementy interfejsu dla zalogowanego użytkownika tutaj -->
        </Grid>
        <Grid x:Name="EvaluationDetailsGridB" Visibility="Collapsed" Width="1000">
            <Button Content="Wróć" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Height="40" Margin="-410,50,0,0" Click="ReturnButton_Click" Panel.ZIndex="1" />
            <StackPanel x:Name="TestDrukB" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Width="700px">
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock x:Name="AnswerB1" Text="Imie Nazwisko" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question0AnswerB" Text="Odpowiedź na pytanie 1:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock x:Name="AnswerB2" Text="Jakie są rezultaty Twojej pracy (konkretne wyniki)?" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question1AnswerB" Text="Odpowiedź na pytanie 1:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock x:Name="AnswerB3" Text="Jakie Twoje działania określił(a)byś jako pozytywne?" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question2AnswerB" Text="Odpowiedź na pytanie 2:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5" Margin="0,0,0,-15">
                    <TextBlock x:Name="AnswerB4" Text="Jak oceniasz swoje działania i zachowania w kontekście wartości firmy?" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock Text="Uczciwość:" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question3AnswerB" Text="Odpowiedź na pytanie 3:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock Text="Odpowiedzialność:" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question4AnswerB" Text="Odpowiedź na pytanie 4:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock Text="Zaangażowanie:" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question5AnswerB" Text="Odpowiedź na pytanie 5:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock Text="Bliskie relacje:" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question6AnswerB" Text="Odpowiedź na pytanie 6:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock Text="Innowacyjność:" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question7AnswerB" Text="Odpowiedź na pytanie 7:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock x:Name="AnswerB5" Text="Jakie Twoje działania określił(a)byś jako utrudniające uzyskanie dobrych rezultatów?" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question8AnswerB" Text="Odpowiedź na pytanie 8:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock x:Name="AnswerB6" Text="Nad czym chcesz pracować (jakie elementy zachowania/umiejetności chcesz rozwijać/jakie sobie stawiasz cele)?" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question9AnswerB" Text="Odpowiedź na pytanie 9:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock x:Name="AnswerB7" Text="Określ sposób i czas monitorowania dążenia do tych celów (kiedy i po czym poznasz, że zostały one zrealizowane):" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question10AnswerB" Text="Odpowiedź na pytanie 10:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock Text="Uwagi:" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question11AnswerB" Text="Odpowiedź na pytanie 11:" Style="{StaticResource AnswerStyle}"/>
            </StackPanel>
            <Button Content="Drukuj" VerticalAlignment="Top" HorizontalAlignment="Right" Width="300" Height="40" Margin="0,50,-410,0" Click="PrintButtonB_Click"></Button>
            <Button x:Name="OdpowiedzB" Content="Odpowiedz" VerticalAlignment="Top" HorizontalAlignment="Right" Width="300" Height="40" Margin="0,120,-410,0" Click="OdpowiedzB_Click"></Button>
            <!-- Układ z szczegółami oceny -->
        </Grid>
        <Grid x:Name="EvaluationDetailsGridP" Visibility="Collapsed" Width="1000">
            <Button Content="Wróć" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Height="40" Margin="-410,50,0,0" Click="ReturnButton_Click" Panel.ZIndex="1" />
            <StackPanel x:Name="TestDrukP" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Width="700px">
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock x:Name="AnswerP1" Text="Imie Nazwisko:" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question0AnswerP" Text="Odpowiedź na pytanie 1:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock x:Name="AnswerP2" Text="Jakie twoje działania określił(a)byś jako pozytywne (przynoszące rezultaty w twojej pracy)?" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question1AnswerP" Text="Odpowiedź na pytanie 1:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock x:Name="AnswerP3" Text="Jakie twoje działania określił(a)byś jako utrudniające uzyskanie dobrych rezultatów?" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question2AnswerP" Text="Odpowiedź na pytanie 2:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock x:Name="AnswerP4" Text="Nad czym chcesz pracować (jakie elementy zachowania/umiejętności chcesz rozwijać/jakie sobie stawiasz cele)?" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question3AnswerP" Text="Odpowiedź na pytanie 3:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock x:Name="AnswerP5" Text="Określ sposób i czas monitorowania dążenia do tych celów (kiedy i po czym poznasz, że zostały one zrealizowane)" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question4AnswerP" Text="Odpowiedź na pytanie 4:" Style="{StaticResource AnswerStyle}"/>
                <Border Background="#FFFCCE17" CornerRadius="10" Padding="5">
                    <TextBlock Text="Uwagi" Style="{StaticResource QuestionStyle}"/>
                </Border>
                <TextBlock x:Name="Question5AnswerP" Text="Odpowiedź na pytanie 5:" Style="{StaticResource AnswerStyle}"/>
            </StackPanel>
            <Button Content="Drukuj" VerticalAlignment="Top" HorizontalAlignment="Right" Width="300" Height="40" Margin="0,50,-410,0" Click="PrintButtonP_Click"></Button>
            <Button x:Name="OdpowiedzP" Content="Odpowiedz" VerticalAlignment="Top" HorizontalAlignment="Right" Width="300" Height="40" Margin="0,120,-410,0" Click="OdpowiedzP_Click"></Button>
            <!-- Układ z szczegółami oceny -->
        </Grid>
        <Grid x:Name="AdminPanel" Visibility="Collapsed">
