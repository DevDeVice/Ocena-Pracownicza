                            <TextBlock Text="Odpowiedź na pytanie 10:" Grid.Row="0" HorizontalAlignment="Center"/>
                            <TextBox x:Name="Question10TextBoxB" Width="300" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0" TabIndex="9"/>
                        </Grid>
                        <Grid Margin="0,20,0,0" Width="300">
                            <TextBlock Text="Odpowiedź na pytanie 11:" Grid.Row="0" HorizontalAlignment="Center"/>
                            <TextBox x:Name="Question11TextBoxB" Width="300" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0" TabIndex="10"/>
                        </Grid>
                        <Button x:Name="FormBiuroZapisz" Content="Zapisz" Width="300" Height="40" HorizontalAlignment="Center" Margin="0,20,0,20" Click="SaveFormButtonB_Click" Panel.ZIndex="2" VerticalAlignment="Center" IsDefault="True"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid x:Name="FormPanelProdukcja" Visibility="Collapsed">
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <StackPanel Margin="-2,100,0,0">
                    <!-- Imię i nazwisko -->
